generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String?
  imageUrl String?
  googleSecret String?
  // add path of the image
//	matching Matching?
  @@map("users")
}

// mode Channels ( many to many relations with Users )

model	Matching {
//	user User @relation(fields: [userId], references: [id])
//	userId Int
  id Int @id @default(autoincrement())
	title String?
}

model	Player {
	socketId String @id
	score	Int @default(0)
	game	Game? @relation(fields: [gameId], references: [id])
	gameId Int?
	//@@map("players")
}

model	Game {
  id Int @id @default(autoincrement())
	players Player[]
//	spectators Player[]
}
