generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String?
  imageUrl String?
  googleSecret String?
  status String
  countWin Int
  friends Int[]
  clientId Int?
  @@map("users")
}

model relationShip {
  id Int @id @default(autoincrement())
  RequesterId Int //Request ID
  AddresseeId Int //Addresse ID
  status String // pending / accepted / refused
}
