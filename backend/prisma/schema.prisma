generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String?
  imageUrl String?
  googleSecret String?
  online Boolean
  // add path of the image
  @@map("users")
}

model relationShip {
  id Int @id @default(autoincrement())
  RequesterId Int // request ID
  AddresseeId Int // Addresse ID
}

