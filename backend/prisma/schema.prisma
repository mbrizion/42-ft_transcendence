// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // probably a command with all
  sentFriendRequests friendRequest[] @relation("creator")
  receivedFriendRequests friendRequest[] @relation("receiver")
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String @unique
  imageUrl String?
  googleSecret String?
  status  String?
  // add path of the image
  socketId String? @unique
  matching Matching?

  inGame Boolean @default(false)
  victories Int @default(0)

	log	Boolean @default(true)

  @@map("users")
}

model friendRequest {
  id Int @id @default(autoincrement())
  creator User? @relation("creator", fields: [creatorId], references: [id])
  creatorId Int?
  receiver User? @relation("receiver", fields: [receiverId], references: [id])
  receiverId Int?
  fstatus String
}

enum fstatus {
  pending
  accepted
  declined
  blocked
}

// mode Channels ( many to many relations with Users )

model	Matching {
	user User @relation(fields: [userId], references: [id])
	userId Int @unique
}

model	Player {
	userId	Int @unique
	displayName String
	score	Int @default(0)
	game	Game? @relation("players", fields: [gameId], references: [id])
	gameId Int?
}

model	Game {
  id Int @id @default(autoincrement())
	players Player[] @relation("players")
}
