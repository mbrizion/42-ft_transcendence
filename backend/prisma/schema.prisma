generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String?
  imageUrl String?
  googleSecret String?
  status String
  countWin Int
  // also a match history
  // friends users[]
  // channels and rights in those channels ( map : _name of channel and array of rights )
  // add path of the image
  @@map("users")
}

//for now just handle one request friend at a time on websocket
model relationShip {
  id Int @id @default(autoincrement())
  RequesterId Int // request ID
  AddresseeId Int // Addresse ID
  // blocked ?
  // friends ?
}
