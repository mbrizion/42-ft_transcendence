generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // probably a command with all
  sentFriendRequests friendRequest[] @relation("creator")
  receivedFriendRequests friendRequest[] @relation("receiver")
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash String?
  displayName String?
  imageUrl String?
  googleSecret String?
  status  String?
  // add path of the image
	socketId String? @unique
  @@map("users")
}

model friendRequest {
  id Int @id @default(autoincrement())
  creator User? @relation("creator", fields: [creatorId], references: [id])
  creatorId Int?
  receiver User? @relation("receiver", fields: [receiverId], references: [id])
  receiverId Int?
  fstatus String
}

enum fstatus {
  pending
  accepted
  declined
  blocked
}
