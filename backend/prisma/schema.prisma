// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  email        String    @unique
  hash         String?
  displayName  String    @unique
  imageUrl     String?
  googleSecret String?
  status       String?
  // add path of the image
  socketId     String?   @unique
  matching     Matching?

  inGame    Boolean @default(false)
  victories Int     @default(0)

  log               Boolean   @default(true)
  userFriends       Friends[] @relation(name: "users")
  friendUserFriends Friends[] @relation(name: "friend_users")

  @@map("users")
}

model Friends {
  id        Int      @id @default(autoincrement())
  user_id   Int
  friend_id Int
  user      User     @relation(name: "users", fields: [user_id], references: [id])
  friend    User     @relation(name: "friend_users", fields: [friend_id], references: [id])
  status    fstatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([user_id, friend_id])
}

enum fstatus {
  pending
  accepted
  declined
  blocked
}

model Matching {
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

model Player {
  userId      Int    @unique
  displayName String
  score       Int    @default(0)
  game        Game?  @relation("players", fields: [gameId], references: [id])
  gameId      Int?
}

model Game {
  id      Int      @id @default(autoincrement())
  players Player[] @relation("players")
}
